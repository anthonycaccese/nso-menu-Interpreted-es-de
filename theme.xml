   <aspectRatio name="4:3">
      <view name="system,gamelist">
         <image name="avatar-image,avatar-mask">
            <size>0.083333333333333 0.111111111111111</size><!-- 80 80 -->
         </image>
      </view>
      <view name="system">
         <text name="menu-title-system">
